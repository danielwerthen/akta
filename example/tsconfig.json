{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "dom"],
    "types": ["node"]
  }
}
